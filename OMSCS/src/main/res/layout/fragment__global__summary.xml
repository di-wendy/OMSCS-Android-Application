<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parse.omscs_starter.Fragments.Fragment_Global_Summary">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:text="You want to see"
        android:textColor="@color/goldhex"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />


    <Spinner
        android:id="@+id/local_global"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/textView"
        android:drawSelectorOnTop="true"
        android:visibility="visible"
        tools:ignore="RtlHardcoded" />

    <FrameLayout
        android:id="@+id/local_global_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/local_global"
        android:layout_marginTop="20dp"
        tools:ignore="UselessLeaf" />

</RelativeLayout>
